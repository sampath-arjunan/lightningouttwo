<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Lead Enquiry Flow Container</masterLabel>
    <description>Component to embed the Lead Enquiry Form flow for Lightning Out 2.0</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <!-- This is important for Lightning Out 2.0 -->
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage,lightningCommunity__Default">
            <property name="flowApiName" type="String" default="Lead_Enquiry_Form" label="Flow API Name" description="API Name of the flow to display"/>
            <property name="title" type="String" default="Lead Enquiry Form" label="Title" description="Title displayed in the header"/>
            <property name="subtitle" type="String" default="Please fill out the form below" label="Subtitle" description="Subtitle displayed in the header"/>
            <property name="showHeader" type="Boolean" default="false" label="Show Header" description="Whether to show the header section"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>

